<tr>
  <td class="date"><%= post.date.to_s :short %></td>
  <td class="subject">
    <%= link_to h(truncate(post.subject, :length => 50)), edit_admin_mailing_list_post_path(post.mailing_list, post) %>
  </td>
  <td class="sender"><%= mail_to post.sender, post.sender %></td>
  <td><%= link_to "Delete", admin_mailing_list_post_path(post.mailing_list, post), :method => :delete, :class => "btn", :id => "delete" %></td>
  <td class="last right"><%= link_to "Edit", edit_admin_mailing_list_post_path(post.mailing_list, post)%></td>
</tr>
