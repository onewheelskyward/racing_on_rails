<% @page_title = "Admin: #{@mailing_list.name}: Posts: New" %>

<%= error_messages_for "post" %>

<h2>New <%= @mailing_list.name %> Post</h2>

<div class="container-fluid">
  <%= form_for [ :admin, @mailing_list, @post ], :html => { :multipart => true, :class => "form-horizontal" }  do |f| -%>
    <div class="row-fluid">
      <div class="span6">
        <%= f.label :date_1i, "Date" %>
        <%= f.datetime_select :date %>
        <%= f.labelled_text_field :subject %>
        <%= f.labelled_text_field :from_name %>
        <%= f.labelled_text_field :from_email_address %>
      </div>
      <div class="span6">
        <%= f.labelled_text_area :body %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <%= submit_tag "Save", :class => "btn btn-primary", :id => "save" %>
        <%= link_to "New",  new_admin_mailing_list_post_path(@mailing_list) %>
      </div>
    </div>
  <% end -%>
</div>
