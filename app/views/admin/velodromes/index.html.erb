<% @page_title = 'Admin: Velodromes' %>

<div class="container-fluid">
  <h2>Velodromes</h2>
  <%= render :partial => "shared/search", :locals => { :name => @name, :placeholder => "Enter name to search" } %>

  <%= table :class => :velodromes, :id => :velodromes do %>
    <tr>
      <th class="icon"/>
      <th class="name">Name</th>
      <th>Website</th>
      <th class="actions"></th>
    </tr>
    <%= render :partial => "velodrome", :collection => @velodromes %>
  <% end -%>
</div>

<div class="buttons container">
  <%= link_to(image_tag('icons/add.png'), { :action => 'new' }, { :class => "image" }) %>
</div>
