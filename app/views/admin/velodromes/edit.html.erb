<% if @velodrome.new_record? 
     velodrome_name = 'New Velodrome' 
   else
     velodrome_name = @velodrome.name
   end %>
<% @page_title = "Admin: Velodromes: #{@velodrome.name}" %>

<%= error_messages_for "velodrome" %>

<h2><%= @velodrome.name %></h2>

<%= form_for([:admin, @velodrome], :html => { :class => "form-horizontal" }) do |f| -%>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span3"></div>
    <div class="span6">
      <%= f.labelled_text_field :name, nil, :class => "wants_focus" %>
      <%= f.labelled_text_field :website %>
    </div>
  </div>
  <div class="row-fluid buttons">
    <div class="span3"></div>
    <div class="created_updated span3">
      <%= "Updated: " + time_ago_in_words(@velodrome.updated_at, true) + " ago" unless @velodrome.updated_at.nil? %>
    </div>
    <div class="actions span3"><%= link_to("Delete", admin_velodrome_path(@velodrome), :method => :delete, :class => 'obvious', :id => 'delete') unless @velodrome.new_record? %><%= submit_tag "Save", :class => "btn btn-primary", :id => "save" %></div>
  </div>
</div>
<% end -%>
