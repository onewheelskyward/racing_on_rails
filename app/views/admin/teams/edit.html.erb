<% if @team.new_record? 
     team_name = "New Team" 
   else
     team_name = @team.name
   end %>
<% @page_title = "Admin: Teams: #{team_name}" %>

<%= error_messages_for "team" %>

<h2><%= @team.name %></h2>

<div class="container-fluid">
  <%= form_for [ :admin, @team ], :html => { :class => "form-horizontal" } do |f| -%>
  <div class="row-fluid">
    <div class="span6">
      <%= f.labelled_text_field :name, nil, :class => @team.new_record? ? "wants_focus span12" : "span12" %>
      <%= f.labelled_text_field :contact_name %>
      <%= f.labelled_text_field :contact_email %>
      <%= f.labelled_text_field :contact_phone %>
      <%= f.labelled_text_field :website %>
      <%= f.labelled_check_box :member, "Member" %>
      <%= f.labelled_check_box :show_on_public_page, "Show on public teams page" %>
    </div>
    <div class="span6">
      <%= f.labelled_text_area :sponsors %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <h3>People</h3>
      <%= table :insert_header => true, :collection => @team.people do %>
        <%- @team.people.sort { |x, y| x.last_name <=> y.last_name || x.first_name <=> y.first_name }.each do |person| -%>
        <tr>
          <td><%= link_to person.name, edit_admin_person_path(person) %></td>
        </tr>
        <%- end -%>
      <% end -%>
    </div>      
    <div class="span4">
      <h3>Aliases</h3>
      <%= table :insert_header => true, :columns => 2, :collection => @team.aliases do %>
        <%- @team.aliases.sort_by {|a| a.name}.each do |name_alias| -%>
        <tr id="alias_<%= name_alias.id %>">
          <td><%= name_alias.name %></td>
          <td>
            <%= link_to(image_tag('icons/delete.png'), 
                 admin_team_alias_path(@team, name_alias),
                 :method => "delete",
                 :remote => true,
                 :class => "image") %>
          </td>
        </tr>
        <%- end -%>
      <% end -%>
    </div>      
    <div class="span4">
      <h3>Historical Names</h3>
      <%= table :insert_header => true, :columns => 3, :collection => @team.names do %>
        <%- @team.names.sort_by(&:year).reverse.each do |name| -%>
        <tr id="name_<%= name.id %>">
          <td><%= name.name %></td>
          <td><%= name.year %></td>
          <td>
            <%= link_to(image_tag("icons/delete.png"), 
                 :url => { :action => "destroy_name", :id => @team.id, :name_id => name.id},
                 :remote => true
                 ) %>
          </td>
        </tr>
        <%- end -%>
      <% end -%>
      </div>
    </div>
    
    <div class="row-fluid">
      <div class="span12">
        <%= submit_tag "Save", :class => "btn btn-primary", :id => "save" %>
        <%= link_to("Results", team_path(@team), :class => "btn btn-link") unless @team.new_record? %>  
        <%= link_to("Delete", admin_team_path(@team), :method => :delete, :class => "btn", :id => 'delete') unless @team.new_record? %>
        <div class="pull-right hidden-phone created_updated">
          <span class="created_at">
            <% if @team.created_at %>Created <%= time_ago_in_words(@team.created_at, true) + " ago" %><% end %>
            <% if @team.created_by %>by <%= truncate_from_end(@team.created_by.name) %><% end %>
          </span>
          <% if @team.updated_at %>Updated <%= time_ago_in_words(@team.updated_at, true) + " ago" %><% end %>
          <% if @team.updated_by %>by <%= truncate_from_end(@team.updated_by_name) %><% end %>
        </div>
      </div>
    </div>

  <% end -%>
</div>
