<% @page_title = "Category 4 Womens Race Series | New Result" %>

<h3>Category 4 Womens Race Series</h3>

<%= error_messages_for "event" -%>
<%= error_messages_for "race" -%>
<%= error_messages_for "result" -%>

<div class="container-fluid">
  <%= form_for(:result, 
              :url => { :controller => "cat4_womens_race_series", :action => "create_result" },
              :html => { :autocomplete => "off", :class => "cat4_womens_race_series form-horizontal" }) do |f| %>

    <div class="row-fluid">
      <div class="span12">
        <div class="control-group">
          <%= label :event, :name, "Event", :class => "control-label" %>
          <div class="controls">
            <%= text_field :event, :name, :autocomplete => "off" %>
          </div>
        </div>
        <div class="control-group">
          <%= label :event, :date, "Date", :class => "control-label" %>
          <div class="controls">
            <%= date_select "event", "date", :order => [:month, :day, :year]%>
          </div>
        </div>
        <div class="control-group">
          <%= label :event, :sanctioned_by, "#{check_box(:event, :sanctioned_by)} #{RacingAssociation.current.short_name}?".html_safe, :class => "checkbox" %>
        </div>

        <%= table :id => :people do %>
          <tr>
            <th class="span1">Place</th>
            <th class="span1">Number</th>
            <th class="span3">First Name</th>
            <th class="span3">Last Name</th>
            <th class="span4">Team Name</th>
          </tr>
          <tr>
            <td class="span1"><%= f.text_field :place %></td>
            <td class="span1"><%= f.text_field :number %></td>
            <td class="span3"><%= f.text_field :first_name %></td>
            <td class="span3"><%= f.text_field :last_name %></td>
            <td class="span4"><%= f.text_field :team_name %></td>
          </tr>
        <% end -%>
      </div>
    </div>

    <div class="row-fluid buttons">
      <div class="span12 actions">
        <%= link_to "Cancel" %>
        <%= submit_tag "Save", :class => "btn-primary", :id => "save" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
