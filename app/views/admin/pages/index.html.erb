<h3>Pages</h3>

<%= table :class => "pages", :id => :pages, :collection => @pages, :columns => 3 do %>
  <tr>
    <th class="title">Title</th>
    <th class="updated">Updated</th>
    <th class="actions">&nbsp;</th>
  </tr>
  <%= render @pages %>
<% end -%>

<div class="row-fluid buttons">
  <div class="span12"><%= link_to(image_tag('icons/add.png'), new_admin_page_path, :class => "image") %></div>
</div>
