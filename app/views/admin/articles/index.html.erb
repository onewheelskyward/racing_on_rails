<% @page_title = "Admin: Articles" %>

<h2>Articles</h2>

<%= table :class => "article clear", :collection => @articles, :columns => 6, :id => :articles do %>
  <thead>
    <tr>
      <th>Article</th>
      <th>Category</th>
      <th>ID</th>
      <th>Position</th>
      <th>Display</th>
      <th>Last Update</th>
    </tr>
  </thead>

  <% for article in @articles %>
    <tr id="article_<%= article.id %>_row">
      <td><%= link_to "#{article.title}", edit_admin_article_path(article) %></td>
      <td><%= link_to "#{article.article_category.name}", { :action => 'index', :article_category_id => article.article_category.id } %></td>
      <td><%=h article.id %></td>
      <td><%=h article.position %></td>
      <td><%=h article.display %></td>
      <td><%=h article.updated_at.to_formatted_s(:long) %></td>
      <!--td><%#= link_to "(delete)", admin_article_path(article), :confirm => 'Are you sure?', :method => :delete %></td-->
    </tr>
  <% end %>
<% end %>

<div class="row-fluid">
  <div class="span12">
    <%= link_to new_admin_article_path, :class => "btn", :id => "new_article" do %>
      <i class="icon-file"></i> New Article
    <% end %>
  </div>
</div>
