<% style_class = nil unless style_class  %>
<h3><%= link_to 'Results', results_path %></h3>
<%= table :class => style_class || "no_top_margin", 
         :id => "home_page_results" do %>
  <%- @recent_results.each do |event| -%>
  <tr>
    <td><%= link_to event.full_name, event_results_path(event) %></td>
  </tr>
  <%- end -%>
  <%- if @recent_results.empty? -%>
  <tr>
    <td>No results in the last two weeks</td>
  </tr>
  <%- end -%>
  <tr>
    <td style="padding-top: 16px;"><%= link_to("More &hellip;".html_safe, results_path) %></td>
  </tr>
<% end -%>
