<% @page_title = "Reset Password" %>
<% @show_tabs = false %>

<div class="container-fluid">
  <%= form_tag password_resets_path do %>
    <div class="row-fluid">
      <div class="span3"></div>
      <div class="span6">
        <%= labelled_text_field_tag :email, "Send password reset instructions to email address", @email, :class =>  "wants_focus span12" %>
      </div>
    </div>
    <div class="row-fluid buttons">
      <div class="span3"></div>
      <div class="span6 actions"><%= submit_tag "Reset My Password", :class => "btn btn-primary" %></div>
    </div>
  <% end %>
</div>
