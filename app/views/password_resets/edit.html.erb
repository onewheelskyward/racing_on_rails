<% @page_title = "New Password" %>
<% @show_tabs = false %>

<%= form_for @person, :url => password_reset_path, :method => :put do |f| %>
  <div class="centered">
    <h2><%= @person.name %></h2>
    <%= f.error_messages %>
    <%= f.label :password, "New Password", :style => "width: 150px;" %>
    <%= f.password_field :password, :class => "wants_focus" %>
    <br />
    <%= f.label :password_confirmation, "Confirm New Password", :style => "width: 150px;" %>
    <%= f.password_field :password_confirmation %>
    <div class="page_buttons>
      <div class="last right" style=""><%= submit_tag "Save", :class => :right, :id => "save" %></div>
    </div>
  </div>
<% end %>
