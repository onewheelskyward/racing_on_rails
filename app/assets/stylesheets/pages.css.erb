/* Page-specific. Do we really need so many of these?  Probably should be separate files for pages. */

/* Admin events */
.edit_event h3.events {
  padding-top: 0px;
}

.edit_event .control-group.name {
  margin-bottom: 6px;
}

.edit_event .control-group.promoter {
  margin-bottom: 6px;
}

table td.delete_all_races {
  text-align: right;
}

#promoter_links {
  margin-top: 4px;
  margin-left: 5px;
}

#promoter_links a {
  margin-right: 8px;
}

/* Calendar of events */
table.calendar {
  border-collapse: separate;
  padding: 0px;
  width: 100%;
  margin-bottom: 36px;
}

table.calendar thead th {
  text-align: center;
}

tr.month {
  vertical-align: top;
}

td.day {
  height: 100px;
  width: 14%;
  background-color: rgb(238, 238, 238);
  border: 1px solid white;
  text-align: left;
}

td.day div.event {
  font-size: $font-size-smaller;
  margin-bottom: 8px;
  line-height: 16px;
}

td.day div.beginner_friendly {
  background-image: url(<%= asset_path("icons/star_green.png") %>);
  background-repeat: no-repeat;
  padding-left: 20px;
}

td.day div.number {
  font-weight: bold;
  text-align: right;
}

td.day_from_other_month
{
  height: 100px;
  width: 14%;
  border: 1px solid white;
  background: white;
  padding: 4px 4px;
}

td.day_from_other_month div.number {
  font-style: italic;
  text-align: right;
}

table.calendar td.beginner_friendly {
  text-align: right;
}

h3.month a:hover {
  background: none;
  background-color: none;
}


table.calendar tbody tr:hover td, .table.calendar tbody tr:hover th {
  background-color: #eee;
}

table.calendar tbody tr:hover td.day_from_other_month {
  background: white;
}

table.calendar tbody td {
  border-bottom: 2px solid white;
}

table td.discipline {
  white-space: nowrap;
}

td.beginner_friendly img {
  padding-top: 2px;
  vertical-align: top;
}

/* Upcoming events */
tr.discipline_upcoming_events {
  vertical-align: top;
}

table#upcoming_events_table td img {
  vertical-align: top;
}

table#upcoming_events_table td:first-line {
  line-height: 16px;
}

tr.discipline_upcoming_events td.date {
  min-width: 50px;
}

tr.discipline_upcoming_events td.info {
  min-width: 150px;
  padding-right: 24px;
}

a.beginner_friendly {
  padding-right: 8px;
}

p.list_link, p.atra_ncs {
  margin-top: 9px;
  text-align: center;
}


/* Categories */
.category_root {
  float: left;
  min-height: 400px;
  width: 90%;
}

.category_root.hovering {
  border-color: $highlight-color;
  background-color: lighten($highlight-color, 33);
}

.disclosure {
  clear: none;
  float: left;
  height: 24px;
  line-height: 24px;
  margin-top: 0px;
  text-align: center;
  width: 24px;
  display: inline-block !important;
}

.category_root .category {
  clear: both;
  float: left;
  width: 376px;
}

.category .category_name {
  clear: none;
  float: left;
  cursor: move;
  background-repeat: no-repeat;
  background-position: 0px 2px;
  line-height: 24px;
  height: 24px;
  padding-right: 8px;
  white-space: nowrap;
}

.category i {
  line-height: 24px;
}

.category .children {
  clear: both;
  float: left;
  padding-left: 24px;
}

.category_root div.hovering {
  background-color: #E9F79B;
}

/* Results admin */
table.base td.disclosure {
  text-align: right;
  width: 16px;
}

table.base td.disclosure img {
  cursor: pointer;
}

table.results .drag {
  cursor: move;
}

table.results td.place,
table.results th.points,
table.results td.points {
  text-align: right;
}

table.results td.result .event {
  float: left;
  margin-left: 8px;
}

.half_width {
  width: 48%;
}

#left_person {
  float: left;
}

#right_person {
  float: left;
  margin-left: 12px;
  margin-right: 0px;
}

#left_person td.page_links,
#right_person td.page_links {
  min-width: 40px;
  width: 40px;
}

#find_progress_icon {
  padding-left: 6px;
  padding-top: 10px;
}

/* Pages */
table.base .title div.editable {
  background-repeat: no-repeat;
  background-image: url(<%= asset_path("icons/page_white_world.png") %>);
  padding-left: 20px;
}

#page_body {
  width: 100%;
  height: 340px;
  font-size: 10px;
  font-family: Monaco, "Lucida Console", Monospace, "Bitstream Vera Sans Mono", "Courier New", Courier, monospaced;
}

#page_parent_id {
  width: 270px;
}

table.base img.icon {
  float: left;
  position: relative;
  top: -2px;
  padding-left: 4px;
  padding-right: 8px;
}

table.base td img.cancel {
  width: 16px;
  height: 16px;
  margin-left: -6px;
}

table.base td.name a.cancel {
  border: none;
  text-decoration: none;
  background-color: transparent;
}

table.base .actions {
  text-align: right;
  white-space: nowrap;
}

.table_container#people th.number, .table_container#people td.number {
  text-align: right;
}

table.numbers select {
  margin-top: 0px;
  float: right;
  width: 78px;
}

table.numbers td label {
  text-align: left;
  font-weight: normal;
  color: black;
  margin-top: 0px;
  width: auto;
}

table.numbers td input[type=text] {
  width: 60px;
}

table.person_categories td input[type=text] {
  width: 120px;
}

/* public teams page */
table.base#teams_table td.club_name {
  width: 30%;
}

table.base#teams_table td.contact {
  white-space: nowrap;
}

table.base a.preliminary {
  font-style: italic;
}

input.city {
  width: 90px;
}

input.city_no_zip {
  width: 80%;
}

input.state {
  width: 32px;
}

input.state_no_zip {
  width: 10%;
}

input.zip {
  width: 56px;
}

.current, .renewed {
  padding-right: 20px;
  background-image: url(<%= asset_path("icons/accept.png") %>);
  background-repeat: no-repeat;
  background-position: center right;
}

/* Cat 4 womens series */
form.cat4_womens_race_series input#event_name {
  width: 512px;   
}

form.cat4_womens_race_series td input#result_place,
form.cat4_womens_race_series td input#result_number {
  width: 40px;
}

form.cat4_womens_race_series td input#result_first_name,
form.cat4_womens_race_series td input#result_last_name,
form.cat4_womens_race_series td input#result_team_name {
  width: 184px;
}


/* Event */
table.event_nav td.race {
  background-image: url(<%= asset_path("icons/star.png") %>);
  background-repeat: no-repeat;
  background-position: 8px 4px;
}

table.event_nav td.category {
  padding-left: 30px;
}

table.event_nav td.race .editable {
  margin-left: 24px;
}

table.event_nav td.delete {
  width: 16px;
}

td.delete_all_races {
    white-space: nowrap;
}

/* Mailing lists */
table.archive_navigation, div.archive_navigation, div.archive_navigation div {
  margin-left: auto;
  margin-right: auto;
  text-align: center;
}

div.archive_navigation a
{
  padding-top: 4px;
  padding-bottom: 4px;
  padding-left: 4px;
  padding-right: 4px;
  vertical-align: middle;
}

div.archive_navigation span
{
  padding-top: 4px;
  padding-bottom: 4px;
  padding-left: 4px;
  padding-right: 4px;
  vertical-align: middle;
}

div.archive_navigation input
{
  padding-left: 4px;
  padding-right: 4px;
  vertical-align: middle;
}

/* Results */
table.base td.total_points span.total
{
  font-size: 8pt;
  font-weight: bold;
  text-align: right;
  padding-right: 12px;
}

table.base td.total_points {
  font-weight: bold;
  text-align: right;
  padding-right: 8px;
}

table.event_races {
  display: inline-table;
}

table.event_races td {
  padding-left: 12px;
  padding-right: 12px;
  text-align: left;
}

table.child_single_day_events {
  display: inline-table;
}

table.child_single_day_events td {
  font-weight: bold;
  padding-top: 12px;
  padding-left: 8px;
  padding-right: 8px;
}

table.child_single_day_events td.date {
  text-align: right;
}

table.child_single_day_events td.event {
  text-align: left;
}

table.child_single_day_events td.child {
  padding-top: 2px;
  text-align: left;
}

table.child_single_day_events td.child a {
  font-weight: normal;
}

.event_info {
  padding-bottom: $baseLineHeight;
}

.event_notes {
  text-align: center;
}

/* Event first aid providers */
table.first_aid_providers td.date {
  white-space: nowrap;
}

table.first_aid_providers td.name {
  width: 200px;
}

.link_spacer {
  padding-left: 8px;
  padding-right: 8px;
}

table.event_results {
  margin-bottom: $baseLineHeight * 2;
}

table.event_results td {
  padding-right: 8px;
}

table.results th.place,
table.event_results th.place,
table.event_results th.laps {
  padding-left: 0px;
  padding-right: 8px;
  text-align: right;
  width: 24px;  
}

table.event_results th.state,
table.event_results th.age {
  width: 24px;  
}

table.event_results th.time_bonus_penalty,
table.event_results th.points,
table.event_results th.points_bonus,
table.event_results th.points_penalty,
table.event_results th.points_from_place,
table.event_results th.points_total,
table.event_results th.number,
table.results th.number {
  padding-left: 0px;
  padding-right: 8px;
  text-align: right;
  width: 55px;  
}

table.event_results th.time_total,
table.event_results th.time_gap_to_winner,
table.event_results th.time_gap_to_leader,
table.event_results th.time {
  padding-left: 0px;
  padding-right: 8px;
  text-align: right;
  width: 80px;
}

table.event_results th.first_name,
table.event_results th.city {
  width: 100px;
}

table.event_results th.category_name,
table.event_results th.last_name {
  width: 120px;
}

table.event_results th.name {
  width: 220px;
}

table.event_results td {
  padding-right: 8px;
}

table.person_results td.place {
  width: 24px;
}

table.person_results td.standings {
  width: 400px;
}

table.person_results td.category {
  width: 200px;
}

table.person_results td.dates {
  width: 100px;
}

.table-striped th.bar, 
.table-striped td.bar {
  text-align: center;
}

tr.new_number td.right {
  padding-left: 0px;
  margin-left: 0px;
}

table.base td select#number_year {
  margin-right: 8px;
}

table.numbers label.inline {
  width: 120px;
}

.promoted_events .name,
.promoted_events .link {
  white-space: nowrap;
}

.promoted_events .link {
  padding-right: 8px;
}

/* Mailing list archive */
#archived_post_body {
  float: left;
  clear: both;
  margin-left: 154px;
  margin-bottom: 36px;
  width: 600px;
}

.posts th.subject, .posts td.subject {
  padding-left: 36px;
}

.posts td.subject {
  background-image: url(<%= asset_path("icons/email.png") %>);
  background-repeat: no-repeat;
  background-position: 12px center;
}

#post_search_form label, #post_search_form input[type=text], #post_search_form input[type=submit] {
  margin-top: 0px;
}

#post_search_form label {
  height: 21px;
  margin-left: 0px;
  margin-top: 2px;
  width: auto;
}

form#post_search_form input#search_text {
  margin-top: 0px;
  width: 120px;
}

form#post_search_form input#search {
  margin-left: 8px;
}

.post_search, .post_dates {
  float: left;
  width: 33%;
}

.post_dates {
  text-align: right;
}

.post_search_pagination {
  float: left;
  width: 34%;
}

ul.posts_navigation li {
  display: inline;
  padding-left: 8px;
  padding-right: 8px;
}

/* People */
#preview_import_table tr th {
  border-bottom: 1px solid gray;
}

table#preview_import_table {
  border-top: 1px solid gray;
}

table#preview_import_table th {
  min-width: 100px;
}

#import_year {
  margin-top: 0px;
  padding-top: 0px;
  margin-left: 8px;
}

.pagination {
  text-align: center;
}

.promoted_events .name,
.promoted_events .link {
  white-space: nowrap;
}

.promoted_events .link {
  padding-right: 8px;
}

#merge_form {
  background-image: url(<%= asset_path("icons/error.png") %>); 
  background-position: 0px 2px; 
  background-repeat: no-repeat;
  padding-left: 24px;
  padding-top: 2px;
}

.ui-draggable-dragging.person {
  background-image: url(<%= asset_path("icons/user.png") %>);
}

select#person_date_of_birth_2i, select#person_member_from_2i, select#person_member_to_2i {
	width: 100px;
}

select#person_date_of_birth_1i, select#person_member_from_1i, select#person_member_to_1i {
	width: 70px;
}

select#person_date_of_birth_3i, select#person_member_from_3i, select#person_member_to_3i {
	width: 50px;
}

.form-horizontal .membership .control-group {
  margin-bottom: 0px;
}

.people .license, .people .racing_age {
  text-align: right;
}

table.people div.aliases {
  color: $gray;
  font-style: italic;
}

#event_notes {
  height: $baseLineHeight * 4;
}

/* Versions */
.version .what,
.version .from,
.version .to {
  width: 33%;
}

.ui-draggable-dragging.team {
  background-image: url(<%= asset_path("icons/group.png") %>);
}

/* Public results */
td.right, th.right {
  text-align: right;
}


.icon-parents {
  background-image: url(<%= asset_path("glyphicons/glyphicons_024_parents.png") %>);
  background-position: 0px 0px;
  width: 23px;
}
